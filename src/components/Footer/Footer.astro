---
const facebook = "https://www.facebook.com/profile.php?id=100048890242534";
const instagram = "https://www.instagram.com/estilo.mbr/";
---

<footer class="containerFooter">
  <div class="divTopFooter">
    <img
      src="/img/navBar/logo-mbr-svg.svg"
      alt="logo-footer"
      width="200"
      height="80"
    />
    <div class="divMenuFooter">
      <a href="#home">
        <p>Inicio</p>
      </a>
      <a
        href="https://tienda.estilombr.com.ar/accesorios/"
        target="_blank"
        rel="noreferer"
        class="linkMenu"
      >
        <p>Accesorios</p>
      </a>
      <a
        href="https://tienda.estilombr.com.ar/calzado/borcegos/"
        target="_blank"
        rel="noreferer"
        class="linkMenu"
      >
        <p>Borcegos</p>
      </a>
      <a
        href="https://tienda.estilombr.com.ar/"
        target="_blank"
        rel="noreferer"
        class="linkMenu"
      >
        <p>Tienda Online</p>
      </a>
    </div>
  </div>
  <div class="divBottomFooter">
    <div class="iconsFooter">
      <a
        href={facebook}
        target="_blank"
        rel="noreferer"
        data-name="icon-facebook"
      >
        <i class="fa-brands fa-square-facebook fa-lg"></i>
      </a>
      <a href={instagram} target="_blank" rel="noreferer">
        <i class="fa-brands fa-instagram fa-lg"></i>
      </a>
    </div>
    <p class="mail">contaco@estilombr.com.ar</p>
    <span>
      {String.fromCharCode(169)} 2023 Estilo MBR | Desarrollado por{" "}
      <a
        href="https://facilitadora.com.ar/"
        target="_blank"
        rel="noreferer"
        class="linkFacilitadora"
        name="icon-facebook"
      >
        Facilitadora
      </a>
    </span>
  </div>
</footer>

<style>
  .containerFooter {
    background-color: var(--backgroundBlack);
    padding: 50px;
  }
  .divTopFooter {
    display: flex;
    justify-content: space-evenly;
    border-bottom: 1px solid var(--whiteText);
    flex-wrap: wrap;
  }
  .divTopFooter img {
    padding: 25px;
    width: 275px;
    height: 135px;
  }
  .divMenuFooter {
    display: flex;
    flex-direction: column;
    gap: 12px;
    font-family: var(--fontParagraph);
    font-weight: 600;
    padding: 25px;
  }
  .divMenuFooter a {
    text-decoration: none;
    color: var(--whiteText);
  }
  .divMenuFooter a:hover {
    color: var(--yellowText);
    cursor: pointer;
  }
  .linkMenu {
    text-decoration: none;
    color: var(--whiteText);
  }
  .linkMenu:hover {
    color: var(--yellowText);
  }
  .divBottomFooter {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    padding: 30px;
    gap: 20px;
    flex-wrap: wrap;
  }
  .divBottomFooter span {
    font-family: var(--fontParagraph);
    font-size: 20px;
    font-weight: 600;
    color: var(--whiteText);
  }
  .linkFacilitadora {
    text-decoration: none;
    color: var(--whiteText);
  }
  .linkFacilitadora:hover {
    color: var(--yellowText);
  }
  .iconsFooter {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    font-size: 20px;
  }
  .iconsFooter i {
    color: var(--whiteText);
  }
  .iconsFooter i:hover {
    color: var(--yellowText);
  }
  .mail {
    color: var(--whiteText);
    font-family: var(--fontParagraph);
    font-size: 18px;
    text-align: center;
  }
</style>
