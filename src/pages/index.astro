---
import Header from "../components/Header/Header.astro";
import SectionOne from "../components/SectionOne/SectionOne.astro";
import SectionTwo from "../components/SectionTwo/SectionTwo.astro";
import SectionThree from "../components/SectionThree/SectionThree.astro";
import SectionFive from "../components/SectionFive/SectionFive.astro";
import Footer from "../components/Footer/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <meta
      name="description"
      content="Estilo MBR, tienda online de calzados y accesorios. Nos encontramos en Lomas de Zamora, Buenos Aires, Argentina."
    />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bungee&family=Poppins:wght@400;600;900&family=Quicksand:wght@300;400;500;700&family=Raleway:wght@400;500;600;800&family=Rubik:wght@900&display=swap"
      rel="stylesheet"
    />
    <link rel="apple-touch-icon" sizes="144x144" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <script
      src="https://kit.fontawesome.com/3a84dfeae6.js"
      crossorigin="anonymous"
      async="0.3s"
    ></script>
    <title>Astro Test</title>
  </head>
  <body>
    <Header />
    <SectionOne />
    <SectionTwo />
    <SectionThree />
    <SectionFive />
    <Footer />
  </body>
</html>

<style lang="scss">
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  :root {
    --whiteText: #e5e5e4;
    --blackText: #000;
    --yellowText: #f4df53;
    --greyText: #606060;
    --greyText2: #2d2d31;

    --fontParagraph: "Raleway", sans-serif;
    --fontExtra: "Bungee", cursive;
    --fontTitles: "Rubik", sans-serif;
    --fontSections: "Poppins", sans-serif;
    --fontImpact: "Impact", sans-serif;

    --backgroundBlack: #000;
    --backgroundWhite: #e5e5e4;
    --backgroundYellow: #f4df53;
    --backgroundGrey2: #606060;
    --backgroundGrey: #2d2d31;
  }
  html {
    scroll-behavior: smooth;
    min-width: 400px;
  }
  body {
    background-color: rgba(0, 0, 0, 0.5);
  }
</style>
